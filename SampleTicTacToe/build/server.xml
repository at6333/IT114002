<project name ="TTTServer" default="Main" basedir=".">
    <property name="src.dir" location="../src" />
    <property name="bin.dir" location="../bin" />

    <target name="clean">
        <delete dir="${bin.dir}" />
    </target>

    <target name="makedir">
        <mkdir dir="${bin.dir}" />
    </target>

    <target name="compile" depends="clean, makedir">
        <javac srcdir="${src.dir}" destdir="${bin.dir}" />
    </target>

    <target name="build" depends="compile">
        <jar destfile="./Server.jar" basedir="${bin.dir}">
            <manifest>
                <attribute name="Main-Class" value="TicTacToeServer" />
            </manifest>
        </jar>
    </target>

    <target name="Main" depends="build">
        <description>Main target</description>
    </target>
</project>
